<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic QR Code Generator</title>
    <script src="https://unpkg.com/qr-code-styling/lib/qr-code-styling.js"></script>
    <style>
        .center {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="center">
        <input id="url-input" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4" type="text" placeholder="Enter URL" required>
        <button id="generate-btn" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4">
            Generate QR Code
        </button>
        <div id="qr-code"></div>
        <button id="download-btn" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            Download QR Code
        </button>
    </div>

    <script>
        let qrCode = new QRCodeStyling({
            width: 300,
            height: 300,
            data: "",
            dotsOptions: {
                color: "#000",
                // type: "rounded"
            },
            backgroundOptions: {
                color: "#ffffff",
            },
            imageOptions: {
                crossOrigin: "anonymous",
                margin: 20
            }
        });

        document.getElementById("generate-btn").addEventListener("click", () => {
            const url = document.getElementById("url-input").value;
            if (url) {
                qrCode.update({
                    data: url
                });
                qrCode.append(document.getElementById("qr-code"));
            } else {
                alert("Please enter a URL");
            }
        });

        document.getElementById("download-btn").addEventListener("click", () => {
            qrCode.download({ name: "qr-code", extension: "png" });
        });
    </script>
</body>
</html>
